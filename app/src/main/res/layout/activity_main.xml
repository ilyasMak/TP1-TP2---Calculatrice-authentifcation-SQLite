<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5sp"
        android:gravity="bottom"
        android:background="@color/black"
        android:orientation="vertical">


        <TextView
            android:id="@+id/TVcalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:text=""
            android:inputType="textMultiLine"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/TVresultat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="70sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:textColor="#717171"
                android:text="MC" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#717171"
                android:background="@color/black"

                android:text="MR" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:text="M+" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:text="M-" />

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:text="MS" />

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:textColor="#717171"
                android:text="M" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/Bc"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:onClick="SupprimerTous"
                    android:background="@drawable/parpoints"
                    android:textSize="20sp"
                    android:text="C" />



                <Button
                    android:id="@+id/B7"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:onClick="Ecrire7"
                    android:textSize="20sp"
                    android:background="@drawable/stylebuttons"
                    android:text="7" />

                <Button
                    android:id="@+id/B4"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:onClick="Ecrire4"
                    android:textSize="20sp"
                    android:background="@drawable/stylebuttons"
                    android:text="4" />

                <Button
                    android:id="@+id/B1"

                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:onClick="Ecrire1"
                    android:textSize="20sp"
                    android:background="@drawable/stylebuttons"

                    android:text="1" />
   <!--
                <Button
                    android:id="@+id/Bpor"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:onClick="EcrireParOuvrire"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:text="(" />-->
                <Button
                    android:id="@+id/Bpor"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:onClick="EcrireM"
                    android:textColor="@color/white"
                    android:background="@drawable/stylebuttons"
                    android:textSize="20sp"
                    android:text="%" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/Bdel"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:onClick="SupprimerCar"
                    android:background="@drawable/parpoints"
                    android:textSize="20sp"
                    android:text="D" />





                <Button
                    android:id="@+id/B8"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:onClick="Ecrire8"
                    android:textSize="20sp"
                    android:background="@drawable/stylebuttons"
                    android:text="8" />

                <Button
                    android:id="@+id/B5"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:onClick="Ecrire5"
                    android:text="5"
                    android:background="@drawable/stylebuttons"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/B2"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:onClick="Ecrire2"
                    android:textSize="20sp"
                    android:background="@drawable/stylebuttons"


                    android:text="2" />

                <Button
                    android:id="@+id/B0"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:onClick="Ecrire0"
                    android:textSize="20sp"
                    android:background="@drawable/stylebuttons"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">




           <!--     <Button
                    android:id="@+id/button30"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"

                    android:onClick="EcrireParFermer"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:text=")" />-->

                <Button
                    android:id="@+id/Bdev"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:onClick="EcrireDev"
                    android:textSize="20sp"
                    android:background="@drawable/parpoints"
                    android:text="/" />

                <Button
                    android:id="@+id/B9"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:onClick="Ecrire9"
                    android:background="@drawable/stylebuttons"
                    android:text="9" />

                <Button
                    android:id="@+id/B6"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:onClick="Ecrire6"
                    android:textSize="20sp"
                    android:background="@drawable/stylebuttons"
                    android:text="6" />

                <Button
                    android:id="@+id/B3"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:onClick="Ecrire3"
                    android:textSize="20sp"
                    android:background="@drawable/stylebuttons"
                    android:text="3" />
                <Button
                    android:id="@+id/Begal"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:onClick="EcrireVerg"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:background="@drawable/stylebuttons"
                    android:text="," />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">







                <Button
                    android:id="@+id/Bmult"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:onClick="EcrireMult"
                    android:textSize="20sp"
                    android:background="@drawable/parpoints"
                    android:text="Ã—" />


                <Button
                    android:id="@+id/Bm"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:onClick="EcrireM"
                    android:textSize="28sp"
                    android:background="@drawable/parpoints"
                    android:text="-" />





                <Button
                    android:id="@+id/Badd"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:onClick="EcrirePlus"
                 android:background="@drawable/parpoints"
                    android:text="+" />
                <Button
                    android:id="@+id/Bverg"
                    android:textSize="28sp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="140sp"
                    android:onClick="Egal"
                    android:background="@drawable/otherbutt"
                    android:text="="
                    />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>